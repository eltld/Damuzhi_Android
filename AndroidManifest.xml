<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.damuzhi.travel"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-sdk android:minSdkVersion="8" />
   <application
       android:name=".activity.common.TravelApplication" android:icon="@drawable/dmzlogo" android:label="@string/app_name" 
        android:theme="@android:style/Theme.NoTitleBar" android:debuggable="true">
        <uses-library android:name="com.google.android.maps"/>
        <activity android:label="@string/app_name" android:name=".activity.entry.WelcomeActivity"  android:screenOrientation="portrait">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.entry.IndexActivity"  android:screenOrientation="portrait" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.more.MoreActivity" android:screenOrientation="portrait">
             <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.more.OpenCityDataActivity" android:launchMode="standard" android:screenOrientation="portrait">
             <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.place.SceneryActivity" android:screenOrientation="portrait" android:launchMode="singleTop">
             <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>  
        <activity android:name=".activity.place.SceneryDetailActivity" android:screenOrientation="portrait">
             <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity> 
        <activity android:name=".activity.place.PlaceMap" android:screenOrientation="portrait" android:launchMode="singleTop">
             <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.common.MenuActivity"  android:screenOrientation="portrait">
             <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>   
          <!--  注册服务 -->
        <service android:name="com.damuzhi.travel.download.DownLoadService"></service> 
        <service android:name=".service.MainService" >
            <intent-filter >
                <action android:name="damuzhi.travel.service.MainService"/>
            </intent-filter>
        </service> 
        <receiver android:name="com.damuzhi.travel.network.CheckNet">
            <intent-filter >
                <action android:name="com.damuzhi.travel.network.CheckNet"/>
            </intent-filter>
        </receiver>
    </application>
    
<uses-permission android:name="android.permission.INTERNET"/>
    <!-- 在SDCard中创建与删除文件权限 -->
<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
<!-- 往SDCard写入数据权限 -->
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>  
<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>  
<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

</manifest>