<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="88.0dp"
    android:orientation="horizontal" 
    android:background="@drawable/td_bg">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="117.4dp"
		    android:layout_height="88.0dp"
		    android:orientation="horizontal">	
		    <ImageView 
		        android:id="@+id/place_image"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:scaleType="fitXY"/>
		    </LinearLayout>
		    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="vertical">
			    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:layout_width="wrap_content"
			    android:layout_height="30.0dp"
			    android:layout_alignParentTop="true"			    
			    android:gravity="center">
			    	 <TextView 
				        android:id="@+id/place_name"
				        android:layout_height="wrap_content"
				        android:layout_width="120.0dp"
				        android:layout_alignParentLeft="true"
				        android:gravity="left|center_vertical"
				        android:textSize="15.0sp"
				        android:textColor="@color/place_name_color"
				        android:layout_marginLeft="10.0dp"
				        android:singleLine="true"
				        android:ellipsize="marquee"
				        android:marqueeRepeatLimit="marquee_forever"
				        android:scrollHorizontally="true"/>				        
				    <TextView 
				        android:id="@+id/place_price"
				        android:layout_height="wrap_content"
				        android:layout_width="80.0dp"
				        android:layout_marginRight="10.0dp"
				        android:gravity="right|center_vertical"
				        android:layout_alignParentRight="true"
				        android:textSize="12.0sp"
				        android:textColor="@color/place_price_color"
				        android:singleLine="true"/>				    
			    </RelativeLayout>
			    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:layout_width="wrap_content"
			    android:layout_height="25.0dp"
			    android:layout_centerVertical="true"
			    android:descendantFocusability="blocksDescendants"
			    android:gravity="center">
				    <TextView 
				        android:id="@+id/place_tag"
				        android:layout_height="wrap_content"
				        android:layout_width="wrap_content"
				        android:layout_marginLeft="8.0dp"
				        android:gravity="left|center_vertical"
				        android:layout_alignParentLeft="true"
				        android:layout_centerVertical="true"
				        android:textSize="12.0sp"
				        android:textColor="@color/place_price_color"
				        android:singleLine="true"/>
				    <LinearLayout
				         xmlns:android="http://schemas.android.com/apk/res/android"
				         android:id="@+id/pro_service_group"
				         android:layout_width="wrap_content"
				         android:layout_height="fill_parent"
				         android:layout_toRightOf="@id/place_tag"
				         android:gravity="center"
				         android:visibility="gone"
				         android:layout_marginLeft="10dp"
				         android:layout_centerVertical="true"
				         android:orientation="horizontal"/>
				    <ImageView 
				        android:id="@+id/place_favorite_image"
				        android:layout_height="wrap_content"
				        android:layout_width="wrap_content"
				       	android:layout_marginRight="10.0dp"
				       	android:src="@drawable/heart"
				        android:layout_centerVertical="true"
				        android:layout_alignParentRight="true"/>
				    <ImageView 
				        android:id="@+id/place_favorite_delete"
				        android:layout_height="wrap_content"
				        android:layout_width="30dp"
				       	android:layout_marginRight="10.0dp"
				       	android:src="@drawable/delete2"
				       	android:focusable="false"
				       	android:clickable="true"
				       	android:scaleType="fitCenter"
				        android:layout_centerVertical="true"
				        android:layout_alignParentRight="true"
				   		android:visibility="gone"/>
			    </RelativeLayout>
			    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:layout_width="wrap_content"
			    android:layout_height="15.0dp"
			    android:layout_marginBottom="10dp"
			    android:layout_alignParentBottom="true"
			    android:gravity="center">
				    <ImageView 
				        android:id="@+id/place_recommend_image1"
				        android:layout_width="12.0dp"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="10.0dp"				        
				        android:layout_alignParentLeft="true"
				        android:scaleType="fitCenter"/>
				     <ImageView 
				        android:id="@+id/place_recommend_image2"
				        android:layout_width="12.0dp"
				        android:layout_height="wrap_content"
				        android:layout_toRightOf="@id/place_recommend_image1"				        
				        android:scaleType="fitCenter"/>	
			         <ImageView 
				        android:id="@+id/place_recommend_image3"
				        android:layout_width="12.0dp"
				        android:layout_height="wrap_content"
				        android:layout_toRightOf="@id/place_recommend_image2"				        
				        android:scaleType="fitCenter"/>	
				        
			          <TextView 
				            android:id="@+id/place_city_area"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_marginLeft="20.0dp"
				            android:textColor="@color/place_price_color"
				            android:textSize="12.0sp"
				            android:layout_toRightOf="@id/place_recommend_image3"
				            />				   				       				   
				     <TextView 
				            android:id="@+id/place_city_distance"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_marginRight="10.0dp"
				            android:gravity="right|center_vertical"
				            android:textColor="@color/place_price_color"
				            android:textSize="12.0sp"
				            android:layout_alignParentRight="true"
				            />
				     
				</RelativeLayout>
		    </RelativeLayout>
</LinearLayout>