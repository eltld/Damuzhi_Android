<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/all_page_bg2"
    android:orientation="vertical" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="@drawable/topmenu_bg">
     <FrameLayout 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentLeft="true"
    	    android:layout_centerVertical="true"
    	    android:layout_marginLeft="10dp">
	    	<ImageButton 
	    	    android:id="@+id/cancel_button"
	    	    android:layout_width="48dp"
	    	    android:layout_height="32dp"
	    	    android:background="@null"
	    	    android:src="@drawable/help_mini_button"/>	
	    	 <TextView 
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:text="@string/cancel"
	    	    android:layout_gravity="center"
	    	    android:gravity="center"
	    	    android:textColor="@color/white"
	    	    android:textSize="14sp"
	    	    />	
    	  </FrameLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
    	<TextView 
    	    android:id="@+id/filter_title"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:gravity="center"
    	    android:textSize="20.0sp"
    	    android:textColor="@color/white"/>
    	</LinearLayout>
    	<FrameLayout 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentRight="true"
    	    android:layout_centerVertical="true"
    	    android:layout_marginRight="10dp">
	    	<ImageButton 
	    	    android:id="@+id/ok_button"
	    	    android:layout_width="48dp"
	    	    android:layout_height="32dp"
	    	    android:background="@null"
	    	    android:src="@drawable/help_mini_button"/>	
	    	 <TextView 
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:text="@string/ok"
	    	    android:layout_gravity="center"
	    	    android:gravity="center"
	    	    android:textColor="@color/white"
	    	    android:textSize="14sp"
	    	    />	
    	  </FrameLayout>
    </RelativeLayout>
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listview_group" 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@color/transparent"
	    android:orientation="vertical" >
    	 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:background="@drawable/select_bg_top"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="15dp"
    	    android:layout_marginRight="15dp"
    	    android:layout_marginTop="30dp"
    	    android:id="@+id/select_all_group"
		    android:orientation="horizontal">
	    	  <CheckBox  
		         android:id="@+id/select_all_checkbox"  
		         android:layout_width="wrap_content"  
		         android:layout_height="wrap_content"  
		         android:focusable="false"  
		         android:focusableInTouchMode="false"  
		         android:clickable="false"         
		         android:checkMark="?android:attr/listChoiceIndicatorMultiple"/>  
		      <TextView   
		         android:id="@+id/filter_all_title"  
		         android:textSize="14sp"  
		         android:text="@string/all_place"
		         android:gravity="center_vertical"
		         android:layout_gravity="center_vertical"
		         android:textColor="@color/black"
		         android:paddingLeft="20dp"
		         android:layout_width="wrap_content"  
		         android:layout_height="wrap_content"/>
	    	 </LinearLayout>
    	<ListView
    	    android:id="@+id/filter_listview"
    	    android:layout_width="fill_parent"
    	    android:layout_height="fill_parent"
    	    android:background="@color/transparent"
    	    android:layout_marginLeft="15dp"
    	    android:layout_marginRight="15dp"
    	    android:layout_marginBottom="35dp"
    	    android:divider="@color/transparent"
    	    android:listSelector="@android:color/transparent"
    	    android:focusable="true"
    	    android:scrollbars="none"
    	    android:cacheColorHint="@android:color/transparent"
    	    android:scrollingCache="true"/>
    </LinearLayout> 
</LinearLayout>