<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="@drawable/topmenu_bg">
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
    	<TextView 
    	    android:id="@+id/place_title"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:gravity="center"
    	    android:textSize="20.0sp"
    	    android:textColor="@color/white"/>
    	<TextView 
    	    android:id="@+id/place_num"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:gravity="center"
    	    android:textSize="15.0sp"
    	    android:textColor="@color/white"/>
    	</LinearLayout>
    	<FrameLayout 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentRight="true"
    	    android:layout_centerVertical="true"
    	    android:layout_marginRight="10dp">
	    	<ImageButton 
	    	    android:id="@+id/help_button"
	    	    android:layout_width="48dp"
	    	    android:layout_height="32dp"
	    	    android:background="@null"
	    	    android:src="@drawable/help_mini_button"/>	
	    	 <TextView 
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:text="@string/help"
	    	    android:layout_gravity="center"
	    	    android:gravity="center"
	    	    android:textColor="@color/white"
	    	    android:textSize="15sp"
	    	    />	
    	  </FrameLayout>
    </RelativeLayout>
     <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/spinner_group"
	    android:layout_width="fill_parent"
	    android:layout_height="41.4dp"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    android:background="@drawable/select_tr">   
   		  <ImageButton 
   		      android:id="@+id/map_view"
   		      android:layout_height="wrap_content"
   		      android:layout_width="wrap_content"
   		      android:layout_alignParentRight="true"
   		      android:layout_centerVertical="true"
   		      android:layout_marginRight="5dp"
   		      android:background="@null"
   		      android:scaleType="fitXY"
   		      android:src="@drawable/select_map_button"/>	
   		  <ImageButton 
   		      android:id="@+id/list_view"
   		      android:layout_height="wrap_content"
   		      android:layout_width="wrap_content"
   		      android:layout_alignParentRight="true"
   		      android:layout_centerVertical="true"
   		      android:layout_marginRight="5dp"
   		      android:visibility="gone"
   		      android:background="@null"
   		      android:scaleType="fitXY"
   		      android:src="@drawable/select_list_button"/>	  
    </RelativeLayout>
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listview_group" 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical" >
    	<ListView
    	    android:id="@+id/place_listview"
    	    android:layout_width="fill_parent"
    	    android:layout_height="fill_parent"
    	    android:focusable="true"
    	    android:scrollbars="none"
    	    android:cacheColorHint="@color/listview_bg"
    	    android:background="@color/white"
    	    android:scrollingCache="true"/>
    </LinearLayout> 
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mapview_group"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:visibility="gone"
	    android:orientation="vertical" >
    	<com.google.android.maps.MapView
         android:id="@+id/common_place_mapview"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:clickable="true" 
         android:apiKey="00drkb-fVMRRdSoct48qrn8K7RpgKDO0CDpm76w"
         />
    	 <ImageView
		      android:id="@+id/my_locate"
		      android:layout_width="31dp"
		      android:layout_height="31dp"
		      android:src="@drawable/locate"
		      android:layout_alignParentRight="true"
		      android:layout_alignParentBottom="true"
		      android:layout_marginRight="20dp"
		      android:layout_marginBottom="20dp"/>
    	  <ImageView
		      android:id="@+id/cancel_locate"
		      android:layout_width="31dp"
		      android:layout_height="31dp"
		      android:src="@drawable/locate_jt"
		      android:layout_alignParentRight="true"
		      android:layout_alignParentBottom="true"
		      android:visibility="gone"
		      android:layout_marginRight="20dp"
		      android:layout_marginBottom="20dp"/>
    </RelativeLayout> 
</LinearLayout>