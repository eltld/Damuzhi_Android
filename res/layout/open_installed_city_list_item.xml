<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="43dp"
    android:background="@drawable/city_td_bg"
    descendantFocusability="blocksDescendants"
    android:id="@+id/installed_data_group"
    android:orientation="horizontal"> 		 
     <Button
        android:id="@+id/delete_button" 
        android:text="@string/delete"
        android:layout_centerVertical="true"
	    android:layout_alignParentLeft="true"
	    android:focusable="false"
	    android:gravity="right|center_vertical"
	    android:paddingRight="10dp"
	    android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"	
    	android:textColor="@color/blue"
        android:background="@drawable/del_btn"/>
		    <RelativeLayout
		        android:id="@+id/download_data_info_group"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_toRightOf="@id/delete_button"
		        android:layout_marginLeft="5dp"
		        android:layout_centerVertical="true">
				<TextView	
				    android:id="@+id/data_city_name"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_alignParentLeft="true"
			    	android:layout_alignParentTop="true"
			    	android:layout_marginTop="8dp"
			    	android:textColor="@color/place_sort_color"
			    	android:textSize="15sp"
			    	android:focusable="false"/>
				<TextView	
				    android:id="@+id/data_size"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_below="@id/data_city_name"
			    	android:textSize="13sp"
			    	android:focusable="false"/>
				<RelativeLayout 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerVertical="true"
				    android:id="@+id/update_status_group"
				    android:layout_below="@id/data_city_name"
				    android:visibility="gone">	
					 <ProgressBar 
					     android:id="@+id/update_bar"
					     android:layout_width="90dp" 
					     android:layout_height="15.0dip"
					     style="?android:attr/progressBarStyleHorizontal"
					     android:layout_below="@id/data_city_name"
					     android:layout_centerVertical="true"/> 
					 <TextView	android:id="@+id/update_persent"
					    	android:layout_width="wrap_content"
					    	android:layout_height="wrap_content"
					    	android:padding="5dp"
					    	android:layout_below="@id/data_city_name"
					    	android:layout_toRightOf="@id/update_bar"
					    	android:layout_centerVertical="true"
					    	android:textColor="@color/place_sort_color"
					    	android:textSize="13.0sp"/>    
				</RelativeLayout>	
			</RelativeLayout>	    
	<RelativeLayout
		    	android:id="@+id/button_group"
		    	android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		    	android:layout_centerVertical="true"
		        android:layout_alignParentRight="true">
		<FrameLayout
		        xmlns:android="http://schemas.android.com/apk/res/android"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:visibility="gone"	     
		        android:id="@+id/cancel_update_download_manager_group"    
		        android:layout_centerVertical="true"
		        android:layout_alignParentRight="true"
		        android:paddingRight="5dp"
		        android:orientation="horizontal"  >
			    <ImageButton
			        android:id="@+id/cancel_update_download_button"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:focusable="false"
	       		  	android:clickable="true"
			        android:background="@null"
			        android:scaleType="fitCenter"
			        android:src="@drawable/cancel_btn"/>
			    <TextView android:id="@+id/cancel_download_manager_title"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="@color/place_sort_color"
			        android:layout_gravity="right|center_vertical"
			        android:layout_marginRight="5dp"
			        android:text="@string/cancel"
			        android:textSize="13.0sp"/>
		</FrameLayout>
		<FrameLayout
		        xmlns:android="http://schemas.android.com/apk/res/android"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"	
		        android:layout_toLeftOf="@id/cancel_update_download_manager_group"   
		        android:id="@+id/update_download_manager_group"   
		        android:layout_centerVertical="true"
		        android:visibility="gone"
		        android:orientation="horizontal" >
			    <ImageButton
			        android:id="@+id/update_downlaod_button"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:focusable="false"
	       		 	android:clickable="true"
			        android:background="@null"
			        android:scaleType="fitCenter"
			        android:src="@drawable/download_btn"/>
			    <TextView android:id="@+id/download_manager_title"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical|right"
			        android:textColor="@color/place_sort_color"
			        android:paddingRight="8dp"
			        android:text="@string/update"
			        android:textSize="13.0sp"/>
			 </FrameLayout>
		<FrameLayout
		        xmlns:android="http://schemas.android.com/apk/res/android"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"	
		        android:layout_toLeftOf="@id/cancel_update_download_manager_group"   
		        android:id="@+id/restart_update_download_manager_group"   
		        android:layout_centerVertical="true"
		        android:visibility="gone"
		        android:orientation="horizontal" >
			    <ImageButton
			        android:id="@+id/restart_update_download_btn"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:focusable="false"
	       		 	android:clickable="true"
			        android:background="@null"
			        android:scaleType="fitCenter"
			        android:src="@drawable/play_btn"/>
			    <TextView android:id="@+id/restart_download_manager_title"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical|right"
			        android:textColor="@color/place_sort_color"
			        android:paddingRight="8dp"
			        android:text="@string/restart_download"
			        android:textSize="13.0sp"/>
			 </FrameLayout>
			 <FrameLayout
		        xmlns:android="http://schemas.android.com/apk/res/android"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"	
		        android:layout_toLeftOf="@id/cancel_update_download_manager_group"   
		        android:id="@+id/stop_update_download_manager_group"   
		        android:layout_centerVertical="true"
		        android:visibility="gone"
		        android:orientation="horizontal" >
			    <ImageButton
			        android:id="@+id/stop_update_download_btn"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:focusable="false"
	       		 	android:clickable="true"
			        android:background="@null"
			        android:scaleType="fitCenter"
			        android:src="@drawable/pause_btn"/>
			    <TextView android:id="@+id/stop_update_download_manager_title"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical|right"
			        android:textColor="@color/place_sort_color"
			        android:paddingRight="8dp"
			        android:text="@string/pause_download"
			        android:textSize="13.0sp"/>
			 </FrameLayout>
			</RelativeLayout> 
	
	<TextView 
		    android:id="@+id/updating"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="5dp"
		    android:textSize="15.0sp"
		    android:text="@string/installing"		    
		    android:visibility="gone"/>
	<TextView 
		    android:id="@+id/updated"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="5dp"
		    android:textSize="13.0sp"
		    android:text="@string/installed"		    
		    android:visibility="gone"/>
</RelativeLayout>