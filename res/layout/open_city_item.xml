<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10.0dip"
    android:orientation="horizontal" >
	<TextView	android:id="@+id/data_city_ID"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_alignParentLeft="true"
	    	android:textSize="20.0sp"
	    	android:focusable="false"
	    	android:text="广州"/>	
	 <ProgressBar 
	     android:id="@+id/downloadbar"
	     android:layout_width="80.0dip" 
	     android:layout_height="15.0dip"
	     style="?android:attr/progressBarStyleHorizontal"
	     android:layout_toRightOf="@id/data_city_ID"
	     android:layout_centerVertical="true"
	    /> 
	 <TextView	android:id="@+id/download_persent"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_toRightOf="@id/downloadbar"
	    	android:text="00"
	    	android:textSize="15.0sp"/>   
	<TextView	android:id="@+id/data_city_look"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_alignParentRight="true"
	    	android:textSize="20.0sp"
	    	android:text="@string/review_online"/>
	<Button	android:id="@+id/data_city_download"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_toLeftOf="@id/data_city_look"
	    	android:textSize="20.0sp"
	    	android:paddingRight="30.0dip"
	    	android:focusable="false"
	    	android:text="@string/download"/>
	<Button	android:id="@+id/data_city_download_pause"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_toLeftOf="@id/data_city_look"
	    	android:textSize="20.0sp"
	    	android:paddingRight="30.0dip"
	    	android:visibility="gone"
	    	android:focusable="false"
	    	android:text="@string/download_pause"/>
</RelativeLayout>