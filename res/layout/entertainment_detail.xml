<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:orientation="horizontal" 
    android:background="@color/title_bg_color"
    android:gravity="center">
    	<TextView 
    	    android:id="@+id/entertainment_detail_title"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:gravity="center"
    	    android:textSize="20.0sp"/>
    </LinearLayout>
     <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="40.0dip"
    android:orientation="horizontal" 
    android:background="@drawable/menu2_bg2x">
    	 <ImageView 
	        android:id="@+id/entertainment_detail_recommend_image1"
	        android:layout_width="16.0dip"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10.0dip"	
	        android:layout_centerVertical="true"			        
	        android:layout_alignParentLeft="true"
	        android:scaleType="fitCenter"/>
	     <ImageView 
	        android:id="@+id/entertainment_detail_recommend_image2"
	        android:layout_width="16.0dip"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/entertainment_detail_recommend_image1"				        
	        android:scaleType="fitCenter"/>	
        <ImageView 
	        android:id="@+id/entertainment_detail_recommend_image3"
	        android:layout_width="16.0dip"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/entertainment_detail_recommend_image2"				        
	        android:scaleType="fitCenter"/>	
	     <ImageView 
	        android:id="@+id/entertainment_detail_map_nearby"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:src="@drawable/help2x"
	        android:layout_marginRight="8.0dp"			        
	        android:scaleType="fitCenter"/>	   	
    </RelativeLayout>
   	<ScrollView 
   	    xmlns:android="http://schemas.android.com/apk/res/android"
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:scrollbars="none">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">	
	   	  <FrameLayout
	   	      xmlns:android="http://schemas.android.com/apk/res/android"
	   	      android:id="@+id/image_group"
	   	      android:layout_width="fill_parent"
	   	      android:layout_height="250.0dip"
	   	      android:orientation="vertical">
	   	      <android.support.v4.view.ViewPager  
	   	          android:id="@+id/entertainment_images"
	   	          android:layout_width="fill_parent"
	   	          android:layout_height="fill_parent"
	   	          />
	   	      <RelativeLayout  
	   	        xmlns:android="http://schemas.android.com/apk/res/android"
	            android:layout_width="fill_parent"  
	            android:layout_height="wrap_content"  
	            android:orientation="vertical" >      
		            <LinearLayout 
		                xmlns:android="http://schemas.android.com/apk/res/android" 
		                android:id="@+id/entertainment_images_group"  
		                android:layout_width="fill_parent"  
		                android:layout_height="wrap_content"  
		                android:layout_alignParentBottom="true"  
		                android:layout_marginBottom="30dp"  
		                android:gravity="center_horizontal"  
		                android:orientation="horizontal" >  
		            </LinearLayout>  
	        </RelativeLayout>  
	   	  </FrameLayout>
	   	  <TextView 
	   	      android:layout_width="fill_parent"
	   	      android:layout_height="2.0dp"
	   	      android:background="@color/dividing_lines"/>
	   	  <LinearLayout
	   	      xmlns:android="http://schemas.android.com/apk/res/android" 
	          android:layout_width="fill_parent"  
	          android:layout_height="wrap_content"  
	          android:background="@color/placeIntro_bg"
	          android:orientation="vertical">
	   	  		<TextView	
	   	  		    android:id="@+id/entertainment_intro_title"
	   	  		    android:layout_width="wrap_content"
	   	  		    android:layout_height="wrap_content"
	   	  		    android:padding="10.0dip"
	   	  		    android:textSize="18.0sp"
	   	  		    android:textColor="@color/place_title_color"
	   	  		    android:text="@string/restaurantIntro"
	   	  		    />  
	   	  		 <TextView
	   	  		    android:id="@+id/entertainment_intro"
	   	  		    android:layout_width="fill_parent"
	   	  		    android:layout_height="wrap_content"
	   	  		    android:padding="10.0dip"
	   	  		    android:textSize="15.0sp"
	   	  		    android:textColor="@color/place_price_color"/>
	   	  </LinearLayout>
	   	  <LinearLayout
	   	      xmlns:android="http://schemas.android.com/apk/res/android" 
	          android:layout_width="fill_parent"  
	          android:layout_height="wrap_content"
	          android:background="@color/place_info_bg"
	          android:orientation="horizontal">
	   	  		<TextView	
	   	  		    android:id="@+id/open_time_title"
	   	  		    android:layout_width="wrap_content"
	   	  		    android:layout_height="wrap_content"
	   	  		    android:padding="10.0dip"
	   	  		    android:textSize="18.0sp"
	   	  		    android:textColor="@color/place_title_color"
	   	  		    android:text="@string/openTime"
	   	  		    />  
	   	  		 <TextView
	   	  		    android:id="@+id/open_time"
	   	  		    android:layout_width="fill_parent"
	   	  		    android:layout_height="wrap_content"
	   	  		    android:padding="10.0dip"
	   	  		    android:textSize="15.0sp"
	   	  		    android:textColor="@color/place_price_color"/>
	   	  </LinearLayout>
	   	  <LinearLayout
	   	      xmlns:android="http://schemas.android.com/apk/res/android" 
	          android:layout_width="fill_parent"  
	          android:layout_height="wrap_content"
	          android:background="@color/place_info_bg"
	          android:orientation="horizontal">
	   	  		<TextView	
	   	  		    android:id="@+id/average_consumption_title"
	   	  		    android:layout_width="wrap_content"
	   	  		    android:layout_height="wrap_content"
	   	  		    android:padding="10.0dip"
	   	  		    android:textSize="18.0sp"
	   	  		    android:textColor="@color/place_title_color"
	   	  		    android:text="@string/averageConsumption"
	   	  		    />  
	   	  		 <TextView
	   	  		    android:id="@+id/average_consumption"
	   	  		    android:layout_width="fill_parent"
	   	  		    android:layout_height="wrap_content"
	   	  		    android:padding="10.0dip"
	   	  		    android:textSize="15.0sp"
	   	  		    android:textColor="@color/place_price_color"/>
	   	  </LinearLayout>
	   	  <LinearLayout
	   	      xmlns:android="http://schemas.android.com/apk/res/android" 
	          android:layout_width="fill_parent"  
	          android:layout_height="wrap_content"
	          android:background="@color/place_info_bg"
	          android:orientation="vertical">
	   	  		<TextView	
	   	  		    android:id="@+id/appraisal_title"
	   	  		    android:layout_width="wrap_content"
	   	  		    android:layout_height="wrap_content"
	   	  		    android:padding="10.0dip"
	   	  		    android:textSize="18.0sp"
	   	  		    android:textColor="@color/place_title_color"
	   	  		    android:text="@string/appraisalKey"
	   	  		    />  
	   	  		 <TextView
	   	  		    android:id="@+id/appraisal_info"
	   	  		    android:layout_width="fill_parent"
	   	  		    android:layout_height="wrap_content"
	   	  		    android:padding="10.0dip"
	   	  		    android:textSize="15.0sp"
	   	  		    android:textColor="@color/place_price_color"/>
	   	  </LinearLayout>
	   	  <LinearLayout
	   	      xmlns:android="http://schemas.android.com/apk/res/android" 
	          android:layout_width="fill_parent"  
	          android:layout_height="wrap_content"
	          android:background="@color/place_info_bg"
	          android:orientation="vertical">
	   	  		<TextView	
	   	  		    android:id="@+id/traffic_info_title"
	   	  		    android:layout_width="fill_parent"
	   	  		    android:layout_height="wrap_content"
	   	  		    android:padding="10.0dip"
	   	  		    android:textSize="18.0sp"
	   	  		    android:textColor="@color/place_title_color"
	   	  		    android:text="@string/trafficInfo"
	   	  		    />	   	  		
 	  		    <TextView	
	   	  		    android:id="@+id/traffic_info"
	   	  		    android:layout_width="fill_parent"
	   	  		    android:layout_height="wrap_content"
	   	  		    android:padding="10.0dip"
	   	  		    android:textSize="15.0sp"
	   	  		    android:textColor="@color/place_price_color"
	   	  		    android:text="@string/trafficDistance"/>	   	  	
	   	  </LinearLayout>
	   	  <LinearLayout
	   	      xmlns:android="http://schemas.android.com/apk/res/android" 
	          android:layout_width="fill_parent"  
	          android:layout_height="wrap_content"
	          android:background="@color/place_info_bg"
	          android:orientation="vertical">
	   	  		<TextView	
	   	  		    android:id="@+id/entertainment_tips_title"
	   	  		    android:layout_width="fill_parent"
	   	  		    android:layout_height="wrap_content"
	   	  		    android:padding="10.0dip"
	   	  		    android:textSize="18.0sp"
	   	  		    android:textColor="@color/place_title_color"
	   	  		    android:text="@string/entertainmentTips"
	   	  		    />	   	  		
 	  		    <TextView	
	   	  		    android:id="@+id/entertainment_tips"
	   	  		    android:layout_width="fill_parent"
	   	  		    android:layout_height="wrap_content"
	   	  		    android:padding="10.0dip"
	   	  		    android:textSize="15.0sp"
	   	  		    android:textColor="@color/place_price_color"/>	   	  	
	   	  </LinearLayout>
	   	  <RelativeLayout
	   	      xmlns:android="http://schemas.android.com/apk/res/android" 
	   	      android:id="@+id/phone_group"
	          android:layout_width="fill_parent"  
	          android:layout_height="40.0dp"
	          android:gravity="center"
	          android:background="@drawable/t_bg2x">
	   	  		 <TextView	
	   	  		    android:id="@+id/phone_title"
	   	  		    android:layout_width="wrap_content"
	   	  		    android:layout_height="wrap_content"
	   	  		    android:layout_alignParentLeft="true"
	   	  		    android:layout_centerVertical="true"
	   	  		    android:layout_marginLeft="30.0dp"
	   	  		    android:gravity="center_vertical"
	   	  		    android:textSize="16.0sp"
	   	  		    android:text="@string/phone_number"
	   	  		    android:textColor="@color/connect_info"
	   	  		    />
	   	  		<TextView	
	   	  		    android:id="@+id/phone_num"
	   	  		    android:layout_width="wrap_content"
	   	  		    android:layout_height="wrap_content"
	   	  		    android:layout_toRightOf="@id/phone_title"
	   	  		    android:layout_centerVertical="true"
	   	  		    android:gravity="center_vertical"
	   	  		    android:textSize="16.0sp"
	   	  		    android:textColor="@color/connect_info"
	   	  		    />  
	   	  		 <ImageView
	   	  		    android:id="@+id/phone_call"
	   	  		    android:layout_width="wrap_content"
	   	  		    android:layout_height="wrap_content"
	   	  		    android:layout_alignParentRight="true"
	   	  		    android:src="@drawable/t_phone2x"
	   	  		    android:scaleType="fitXY"
	   	  		    android:layout_marginRight="10.0dip"/>
	   	  </RelativeLayout>
	   	  <RelativeLayout
	   	      xmlns:android="http://schemas.android.com/apk/res/android" 
	   	      android:id="@+id/map_group"
	          android:layout_width="fill_parent"  
	          android:layout_height="40.0dp"
	          android:gravity="center"
	          android:background="@drawable/t_bg2x">
	   	  		<TextView	
	   	  		    android:id="@+id/address"
	   	  		    android:layout_width="wrap_content"
	   	  		    android:layout_height="wrap_content"
	   	  		    android:layout_alignParentLeft="true"
	   	  		    android:layout_centerVertical="true"
	   	  		    android:singleLine="true"
	   	  		    android:gravity="center_vertical"
	   	  		    android:layout_marginLeft="30.0dp"
	   	  		    android:textSize="16.0sp"
	   	  		    android:textColor="@color/connect_info"
	   	  		    />  
	   	  		 <ImageView
	   	  		    android:id="@+id/item_map_view" 
	   	  		    android:layout_width="wrap_content"
	   	  		    android:layout_height="wrap_content"
	   	  		    android:layout_alignParentRight="true"
	   	  		    android:src="@drawable/t_map2x"
	   	  		    android:scaleType="fitXY"
	   	  		    android:padding="10.0dip"/>
	   	  </RelativeLayout>
	   	   <RelativeLayout
	   	      xmlns:android="http://schemas.android.com/apk/res/android" 
	   	      android:id="@+id/website_group"
	          android:layout_width="fill_parent"  
	          android:layout_height="40.0dp"
	          android:gravity="left|center"
	          android:background="@drawable/t_bg2x">
	   	  		<TextView	
	   	  		    android:id="@+id/website"
	   	  		    android:layout_width="wrap_content"
	   	  		    android:layout_height="wrap_content"
	   	  		    android:gravity="left|center_vertical"
	   	  		    android:layout_alignParentLeft="true"
	   	  		    android:layout_marginLeft="30.0dp"
	   	  		    android:textSize="16.0sp"
	   	  		    android:textColor="@color/connect_info"
	   	  		    />  
	   	  </RelativeLayout>
   	  </LinearLayout>
   	</ScrollView>	
    
</LinearLayout>