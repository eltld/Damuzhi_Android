<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView android:id="@+id/item_group_title" 
        	  android:paddingRight="4.0dip" 
        	  android:layout_height="wrap_content" 
        	  style="@style/MMListCatalog" />
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/city_t2"
	    android:descendantFocusability="blocksDescendants"
	    android:id="@+id/listview_item_group"
	    android:orientation="horizontal">
	    <ImageView 
	        android:id="@+id/data_staus"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:src="@drawable/no_s"
	        android:scaleType="fitCenter"/>
	    <RelativeLayout
	        android:id="@+id/download_data_info_group"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/data_staus"
	        android:layout_marginLeft="8dp"
	        android:layout_centerVertical="true">
			<TextView	
			    android:id="@+id/data_city_name"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_alignParentLeft="true"
		    	android:layout_alignParentTop="true"
		    	android:layout_marginTop="8dp"
		    	android:textColor="@color/place_sort_color"
		    	android:textSize="15sp"/>
			<TextView	
			    android:id="@+id/data_size"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_below="@id/data_city_name"
		    	android:textSize="13sp"/>
		<RelativeLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/download_status_group"
		    android:layout_below="@id/data_city_name"
		    android:visibility="gone">	
			 <ProgressBar 
			     android:id="@+id/downloadbar"
			     android:layout_width="100dp" 
			     android:layout_height="15.0dip"
			     style="?android:attr/progressBarStyleHorizontal"
			     android:layout_below="@id/data_city_name"
			     android:layout_centerVertical="true"/> 
			 <TextView	android:id="@+id/download_persent"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:padding="5dp"
			    	android:layout_below="@id/data_city_name"
			    	android:layout_toRightOf="@id/downloadbar"
			    	android:layout_centerVertical="true"
			    	android:textColor="@color/place_sort_color"
			    	android:textSize="13.0sp"/>  
		</RelativeLayout>
		</RelativeLayout>
		<RelativeLayout
		    	android:id="@+id/button_group"
		    	android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		    	android:layout_centerVertical="true"
		        android:layout_alignParentRight="true">
		<FrameLayout
		        xmlns:android="http://schemas.android.com/apk/res/android"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"	
		        android:id="@+id/online_btn_group"      
		        android:layout_centerVertical="true"
		        android:layout_alignParentRight="true"
		        android:paddingRight="30dp"
		        android:orientation="horizontal" >
			    <ImageButton
			        android:id="@+id/online_button"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"       
			        android:focusable="false"
	       		  	android:clickable="true"
			        android:background="@null"
			        android:scaleType="fitCenter"
			        android:src="@drawable/online_button"/>
			    <TextView android:id="@+id/online_title"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="left|center_vertical"
			        android:text="@string/online"
			        android:textColor="@color/place_sort_color"
			        android:gravity="center"
			        android:layout_marginLeft="10dp"
			        android:textSize="13.0sp"/>
		</FrameLayout>
		<FrameLayout
		        xmlns:android="http://schemas.android.com/apk/res/android"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:visibility="gone"	     
		        android:id="@+id/cancel_download_manager_group"    
		        android:layout_centerVertical="true"
		        android:layout_alignParentRight="true"
		        android:paddingRight="30dp"
		        android:orientation="horizontal"  >
			    <ImageButton
			        android:id="@+id/cancel_download_button"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:focusable="false"
	       		  	android:clickable="true"
			        android:background="@null"
			        android:scaleType="fitCenter"
			        android:src="@drawable/cancel_btn"/>
			    <TextView android:id="@+id/cancel_download_manager_title"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="@color/place_sort_color"
			        android:layout_gravity="right|center_vertical"
			        android:layout_marginRight="5dp"
			        android:text="@string/cancel"
			        android:textSize="13.0sp"/>
		</FrameLayout>
		<FrameLayout
		        xmlns:android="http://schemas.android.com/apk/res/android"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"	
		        android:layout_toLeftOf="@id/online_btn_group"   
		        android:id="@+id/start_download_manager_group"   
		        android:layout_centerVertical="true"
		        android:visibility="gone"
		        android:orientation="horizontal" >
			    <ImageButton
			        android:id="@+id/start_download_button"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:focusable="false"
	       		 	android:clickable="true"
			        android:background="@null"
			        android:scaleType="fitCenter"
			        android:src="@drawable/download_btn"/>
			    <TextView android:id="@+id/download_manager_title"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical|right"
			        android:textColor="@color/place_sort_color"
			        android:paddingRight="8dp"
			        android:text="@string/download"
			        android:textSize="13.0sp"/>
			 </FrameLayout>
		<FrameLayout
		        xmlns:android="http://schemas.android.com/apk/res/android"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"	
		        android:layout_toLeftOf="@id/online_btn_group"   
		        android:id="@+id/restart_download_manager_group"   
		        android:layout_centerVertical="true"
		        android:visibility="gone"
		        android:orientation="horizontal" >
			    <ImageButton
			        android:id="@+id/restart_download_btn"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:focusable="false"
	       		 	android:clickable="true"
			        android:background="@null"
			        android:scaleType="fitCenter"
			        android:src="@drawable/play_btn"/>
			    <TextView android:id="@+id/restart_download_manager_title"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical|right"
			        android:textColor="@color/place_sort_color"
			        android:paddingRight="8dp"
			        android:text="@string/restart_download"
			        android:textSize="13.0sp"/>
			 </FrameLayout>
			 <FrameLayout
		        xmlns:android="http://schemas.android.com/apk/res/android"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"	
		        android:layout_toLeftOf="@id/online_btn_group"   
		        android:id="@+id/stop_download_manager_group"   
		        android:layout_centerVertical="true"
		        android:visibility="gone"
		        android:orientation="horizontal" >
			    <ImageButton
			        android:id="@+id/stop_download_btn"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:focusable="false"
	       		 	android:clickable="true"
			        android:background="@null"
			        android:scaleType="fitCenter"
			        android:src="@drawable/pause_btn"/>
			    <TextView android:id="@+id/stop_download_manager_title"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical|right"
			        android:textColor="@color/place_sort_color"
			        android:paddingRight="8dp"
			        android:text="@string/pause_download"
			        android:textSize="13.0sp"/>
			 </FrameLayout>
			</RelativeLayout> 
			<RelativeLayout
		    	android:id="@+id/install_group"
		    	android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		    	android:layout_centerVertical="true"
		        android:layout_alignParentRight="true">
						<FrameLayout
				        xmlns:android="http://schemas.android.com/apk/res/android"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"	
				        android:id="@+id/cancel_install_btn_group"      
				        android:layout_centerVertical="true"
				        android:layout_alignParentRight="true"
				        android:paddingRight="30dp"
				        android:orientation="horizontal" >
					    <ImageButton
					        android:id="@+id/cancel_install_button"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:focusable="false"
			       		  	android:clickable="true"
					        android:background="@null"
					        android:scaleType="fitCenter"
					        android:src="@drawable/cancel_btn"/>
					    <TextView android:id="@+id/cancel_install_title"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_gravity="right|center_vertical"
					        android:text="@string/cancel"
					        android:textColor="@color/place_sort_color"
					        android:gravity="left"
					        android:layout_marginRight="5dp"
					        android:textSize="13.0sp"/>
					 </FrameLayout>
					 <FrameLayout
				        xmlns:android="http://schemas.android.com/apk/res/android"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"	
				        android:layout_toLeftOf="@id/cancel_install_btn_group"   
				        android:id="@+id/install_manager_group"   
				        android:layout_centerVertical="true"
				        android:orientation="horizontal" >
					    <ImageButton
					        android:id="@+id/install_button"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:focusable="false"
			       		 	android:clickable="true"
					        android:background="@null"
					        android:scaleType="fitCenter"
					        android:src="@drawable/del"/>
					    <TextView android:id="@+id/install_title"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_gravity="center"
					        android:textColor="@color/place_sort_color"
					        android:paddingRight="8dp"
					        android:text="@string/install"
					        android:textSize="13.0sp"/>
					 </FrameLayout>
			</RelativeLayout> 
			<TextView 
			    android:id="@+id/installing"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:layout_centerVertical="true"
			    android:layout_alignParentRight="true"
			    android:layout_marginRight="30dp"
			    android:textSize="15.0sp"
			    android:text="@string/installing"		    
			    android:visibility="gone"/>
			<TextView 
			    android:id="@+id/installed"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:layout_centerVertical="true"
			    android:layout_alignParentRight="true"
			    android:layout_marginRight="30dp"
			    android:textSize="13.0sp"
			    android:text="@string/installed"		    
			    android:visibility="gone"/>
	</RelativeLayout>
</LinearLayout>