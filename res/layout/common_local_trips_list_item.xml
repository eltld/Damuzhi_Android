<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@android:color/transparent">
    <RelativeLayout 
        	android:id="@+id/agency_name_group"
        	android:layout_width="fill_parent"
		    android:layout_height="25dp"
		    android:orientation="horizontal" 
		    android:background="@drawable/line_top_bg">
			   <TextView android:id="@+id/agency_name" 
		        	  android:layout_alignParentLeft="true"
		        	  android:layout_centerVertical="true"
		        	  android:layout_width="wrap_content"
		        	  android:layout_height="wrap_content" 
		        	  android:paddingLeft="10dp"
		        	  android:textSize="15sp"
		        	  android:textColor="@color/agency_name_color"/>
			    <ImageView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:layout_centerVertical="true"
			        android:layout_marginRight="10dp"
			        android:src="@drawable/go_btn"/>
			    <ImageView
			        android:layout_width="fill_parent"
			        android:layout_height="1dp"
			        android:layout_alignParentBottom="true"
			        android:src="@drawable/line_top_shadow"/>	    
    </RelativeLayout>  
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="88.0dp"
	    android:orientation="horizontal" 
	    android:background="@drawable/td_bg">
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:layout_width="113.4dp"
			    android:layout_height="86.5dp"
			    android:orientation="horizontal">	
			    <ImageView 
			        android:id="@+id/place_image"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"        
			        android:scaleType="fitXY"/>
			    </LinearLayout>
			    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:orientation="vertical">
				    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				    android:layout_width="wrap_content"
				    android:layout_height="30.0dp"
				    android:layout_alignParentTop="true"			    
				    android:gravity="center">
				    	 <TextView 
					        android:id="@+id/route_name"
					        android:layout_height="wrap_content"
					        android:layout_width="wrap_content"
					        android:layout_alignParentLeft="true"
					        android:gravity="left|center_vertical"
					        android:textSize="15.0sp"
					        android:textColor="@color/place_name_color"
					        android:layout_marginLeft="10.0dp"
					        android:singleLine="true"
					        android:ellipsize="marquee"
					        android:marqueeRepeatLimit="marquee_forever"
					        android:scrollHorizontally="true"/>				        	    
				    </RelativeLayout>
				    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				    android:layout_width="wrap_content"
				    android:layout_height="30.0dp"
				    android:layout_centerVertical="true"
				    android:gravity="center">
					    <TextView 
					        android:id="@+id/route_tour"
					        android:layout_height="wrap_content"
					        android:layout_width="wrap_content"
					        android:layout_marginLeft="8.0dp"
					        android:gravity="left|center_vertical"
					        android:layout_alignParentLeft="true"
					        android:layout_centerVertical="true"
					        android:textSize="12.0sp"
					        android:textColor="@color/place_price_color"
					        android:singleLine="true"/>
				    </RelativeLayout>
				    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				    android:layout_width="wrap_content"
				    android:layout_height="15.0dp"
				    android:layout_marginBottom="10dp"
				    android:layout_alignParentBottom="true">
					    <ImageView 
					        android:id="@+id/place_recommend_image1"
					        android:layout_width="12.0dp"
					        android:layout_height="wrap_content"
					        android:layout_marginLeft="10.0dp"				        
					        android:layout_alignParentLeft="true"
					        android:scaleType="fitCenter"/>
					     <ImageView 
					        android:id="@+id/place_recommend_image2"
					        android:layout_width="12.0dp"
					        android:layout_height="wrap_content"
					        android:layout_toRightOf="@id/place_recommend_image1"				        
					        android:scaleType="fitCenter"/>	
				         <ImageView 
					        android:id="@+id/place_recommend_image3"
					        android:layout_width="12.0dp"
					        android:layout_height="wrap_content"
					        android:layout_toRightOf="@id/place_recommend_image2"				        
					        android:scaleType="fitCenter"/>						      				   				       				   
					     <TextView 
					            android:id="@+id/route_days"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:gravity="center"
					            android:textColor="@color/place_price_color"
					            android:textSize="12.0sp"
					            android:layout_centerInParent="true"/>				     
					      <TextView 
					            android:id="@+id/route_price"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_marginRight="10.0dp"
					            android:gravity="right|center_vertical"
					            android:textSize="12.0sp"
					            android:layout_alignParentRight="true"/>				     
					</RelativeLayout>
			    </RelativeLayout>
	</LinearLayout>
</LinearLayout>