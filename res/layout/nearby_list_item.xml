<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="295dp"
    android:layout_height="30dp"  
    android:orientation="horizontal"
    android:gravity="center">
    <ImageView 
        android:id="@+id/place_category"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"/>
    <TextView
        android:id="@+id/place_name"
        android:layout_width="130dp"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/place_title_color"
        android:textSize="12sp"
        android:layout_toRightOf="@id/place_category"
        android:layout_marginLeft="7dp"/>
     <ImageView 
        android:id="@+id/place_detail_recommend_image1"
        android:layout_width="8.0dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10.0dp"	
        android:layout_marginRight="3dp"
        android:layout_centerVertical="true"			        
        android:layout_toRightOf="@id/place_name"
        android:visibility="gone"
        android:src="@drawable/good2"
        android:scaleType="fitCenter"/>
     <ImageView 
        android:id="@+id/place_detail_recommend_image2"
        android:layout_width="8.0dp"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:layout_toRightOf="@id/place_detail_recommend_image1"	
        android:visibility="gone"
        android:src="@drawable/good2"			        
        android:scaleType="fitCenter"/>	
      <ImageView 
       android:id="@+id/place_detail_recommend_image3"
       android:layout_width="8.0dp"
       android:layout_height="fill_parent"
       android:layout_centerVertical="true"
       android:layout_toRightOf="@id/place_detail_recommend_image2"		
       android:src="@drawable/good2"	
       android:visibility="gone"	        
       android:scaleType="fitCenter"/>
      <ImageView 
       android:id="@+id/go_btn"
       android:layout_width="8dp"
       android:layout_height="fill_parent"
       android:layout_centerVertical="true"
       android:layout_alignParentRight="true"	
       android:layout_marginRight="10dp"
       android:src="@drawable/go_btn"		        
       android:scaleType="fitCenter"/>	
       <TextView
          android:id="@+id/place_distance"
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:gravity="left|center_vertical"
          android:textColor="@color/place_title_color"
          android:textSize="12sp"
          android:layout_marginRight="10dp"
          android:layout_centerVertical="true"
          android:layout_toLeftOf="@id/go_btn"/>
</RelativeLayout>    
	          